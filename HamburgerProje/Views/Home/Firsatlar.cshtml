@model List<Menu>

@{
}
<div class="container" style="margin-top:120px;">

    <h3>Süper Fırsatlar</h3>
    <div class="row mt-4">
        @if (Model.Count > 2)
        {

            <div class="col-3">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="~/img/trukcell.jpg" height="200" alt="Card image cap">
                    <div class="card-body" style="height:290px;">
                        <h5 class="card-title">Turkcell'lilere Özel Fırsat</h5>
                        <div class="" style="height:170px;">
                            <p>PAYECLL'in iştah açıcı haberi tüm TURKCELL'lileri doyuruyor...</p>
                            <p class="fs-4 fw-bold">@Model[0].Ad</p>
                            <p class="fw-bold "><s>@Model[0].Fiyat.ToString("c2")</s> yerine sadece <span class="fs-5">@(120.ToString("c2"))</span></p>
                        </div>
                        <div class="d-flex align-items-baseline justify-content-between">
                            <a asp-controller="Home" asp-action="FirsatlardanSepeteEkle" asp-route-id="@Model[0].Id" class="btn btn-primary">Sepete Ekle</a>
                            <p class="fs-5 fw-bold"></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="~/img/vodafon.jpg" height="200" alt="Card image cap">
                    <div class="card-body" style="height:290px;">
                        <h5 class="card-title">VODAFONE'lular Doydu</h5>
                        <div class="" style="height:170px;">
                            <p>VODAFONE müşterilerine özel fırsatlar kapınızda...</p>
                            <p class="fs-4 fw-bold">@Model[1].Ad</p>
                            <p class="fw-bold "><s>@Model[1].Fiyat.ToString("c2")</s> yerine sadece <span class="fs-5">@(175.ToString("c2"))</span></p>
                        </div>
                        <div class="d-flex align-items-baseline justify-content-between">
                            <a asp-controller="Home" asp-action="FirsatlardanSepeteEkle" asp-route-id="@Model[1].Id" class="btn btn-primary">Sepete Ekle</a>
                            <p class="fs-5 fw-bold"></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-3"></div>
        }
    </div>
</div>


